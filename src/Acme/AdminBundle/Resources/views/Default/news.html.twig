{% extends 'AcmeDemoBundle::layout.html.twig' %}

{% block title %}Symfony - Welcome{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
 
<h1>Admin urejanje Novic</h1>
<p><a class="news-add-button" href="{{ path('_news_add') }}">
    <img style="width: 20px;" src="{{ asset('bundles/acmedemo/images/add-button.png') }}" alt="add-button"> 
    <span>Dodajanje novic</span></a></p>
{% for item in news %}
    <div id="news">
        <h2>Naslov:</h2>{{ item.getTitle }} <br />
        <a href="{{ path('_edit', ({'id': item.getId})) }}" class="news-edit-button">
            <img class="link" src="{{ asset('bundles/acmedemo/images/edit-button.png') }}" alt="edit-button">
            <span>Uredi</span></a>
        
        <a href="{{ path('_deleteNews', ({'id': item.getId})) }}" class="news-delete-button">
            <img class="link" src="{{ asset('bundles/acmedemo/images/delete-button.jpg') }}" alt="delete-button">
            <span>Izbri≈°i</span></a>
    </div>
{% endfor %}
 
{% endblock %}
