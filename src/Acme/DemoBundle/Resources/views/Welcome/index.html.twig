{% extends 'AcmeDemoBundle::layout.html.twig' %}

{% block title %}Symfony - Welcome{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

    <div id="novice">
        <h2>Novice iz sveta računalništva</h2>
        <br />
        <div style="margin-left: -13px; width: 102%; border: none;">
            {% for item in news %}
                <div style="margin-left: 14px; float: left; width: 48%;">
                        <h2>Naslov:</h2>{{ item.getTitle }}
                        <p><h2>Povzetek:</h2><br />{{ item.getSummary }}</p>
                        <a href="{{ path('_singlenews', ({'id': item.getId})) }}" >Več...</a>
                </div>
            {% endfor %}
        </div>
    </div>
    
    <div id="row">
        <div><p>Anketa</p><p>Anketa</p><p>Anketa</p></div>
        <div style="float: right"><p>Oglasi</p><p>Oglasi</p><p>Oglasi</p></div>
    </div>

<div id="povezave">
    <p>Povezave</p>
    <p><a href="{{ path('_news') }}">Novice</p>
    <p><a href="{{ path('_newsAdmin') }}">Novice/Admin</p>
</div>
    
{% endblock %}
