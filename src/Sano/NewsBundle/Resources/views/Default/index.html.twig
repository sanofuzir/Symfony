{% extends 'SanoStaticBundle::layout.html.twig' %}

{% block title %}Symfony - Welcome{% endblock %}

{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<div class="vsebina">
    <h1>Arhiv Novic:</h1>
    <a href="{{ path('_addNews') }} " >Dodaj novico</a>
    {% for item in news %}
    <div id="news">
        <span>Naslov:</span>{{ item.getTitle }}<br />
        <span>Povzetek:</span><br />{{ item.getSummary }}<br />
        <span>Datum ustvarjanja:</span>{{ item.getCreationDate|date('d.m.Y H:i:s') }}<br />
        <a href="{{ path('_deleteNews', ({'id': item.getId})) }}" >Izbri≈°i</a>
        <a href="{{ path('_editNews', ({'id': item.getId})) }}" >Uredi</a>
    </div>
{% endfor %}
</div>


      
{% endblock %}
