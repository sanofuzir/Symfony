{% extends 'SanoAdminBundle::layout.html.twig' %}

{% block content_header '' %}

{% block content %}
   

<div class="vsebina">
    <h1>Admin Control Panel</h1>
    <hr />   
    <div>
        <h3>Upravljanje z uporabniki</h3>
        <p>
            <a href="#" ><strong>Registracija novih uporabnikov</strong></a>
        </p>
        <p>
            <a href="#" ><strong>Seznam in urejanje uporabnikov</strong></a>
        </p>
    </div>
    <hr />
    <div id="admin">
        <h3>Upravljanje z novicami</h3>
        <p>
            <a href="{{ path('_addNews') }}" ><strong>Dodajanje novih novic</strong></a>
        </p>
        <p>
            <a href="{{ path('_news') }}" ><strong>Seznam in urejanje novic</strong></a>
        </p>
        {{ render(controller('SanoNewsBundle:Default:box', { 'limit': 12 })) }}
    </div>
    <div id="admin">
        <h3>Upravljanje z Blogom</h3>
        <p>
            <a href="{{ path('_addPost') }}" ><strong>Dodajanje novih objav</strong></a>
        </p>
        <p>
            <a href="{{ path('_AdminBlog') }}" ><strong>Seznam objav in urejanje</strong></a>
        </p>
        {{ render(controller('SanoBlogBundle:Default:box', { 'limit': 12 })) }}
    </div>
    <div id="admin">
        <h3>Upravljanje z Komentarji</h3>
        <p>
            <a href="{{ path('_comment') }}" ><strong>Seznam Komentarjev in urejanje</strong></a>
        </p>
        {{ render(controller('SanoBlogBundle:Comment:box', { 'limit': 12 })) }}
    </div>
    
    <p style="margin-top: 250px;"></p>
</div>
  
{% endblock %}


